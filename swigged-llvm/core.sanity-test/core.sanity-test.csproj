<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <NoWin32Manifest>true</NoWin32Manifest>
    <PostBuildEvent>if "Debug|x64" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x64\Debug\swigged.llvm.native.dll"
if "Debug|x64" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x64\Debug\swigged.llvm.native.pdb"
if "Debug|Win32" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x86\Debug\swigged.llvm.native.dll"
if "Debug|Win32" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x86\Debug\swigged.llvm.native.pdb"
if "Release|x64" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x64\Release\swigged.llvm.native.dll"
if "Release|x64" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x64\Release\swigged.llvm.native.pdb"
if "Release|Win32" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x86\Release\swigged.llvm.native.dll"
if "Release|Win32" == "$(Configuration)|$(Platform)"  copy /y "$(SolutionDir)x86\Release\swigged.llvm.native.pdb"
</PostBuildEvent>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <OutputPath>bin\x64\Debug\</OutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|Win32'">
    <OutputPath>bin\Debug\</OutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <PlatformTarget>x86</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <OutputPath>bin\x64\Release\</OutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|Win32'">
    <OutputPath>bin\x64\Release\</OutputPath>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <EnableUnmanagedDebugging>true</EnableUnmanagedDebugging>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <Prefer32Bit>True</Prefer32Bit>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\std.swigged.llvm\std.swigged.llvm.csproj" />
  </ItemGroup>

</Project>